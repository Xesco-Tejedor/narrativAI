            console.log(`üé≤ Semilla narrativa: ${narrativeSeed}`);

            return narrativeParts.join('\n\n');
        }

        // ==================== SISTEMA ROBUSTO DE GENERACI√ìN DE IM√ÅGENES ====================
        
