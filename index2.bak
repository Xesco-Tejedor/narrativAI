                'cosmic lighting': ['cosmic', 'stellar', 'celestial', 'c√≥smico', 'estelar', 'celestial']
            };
            
            for (const [light, patterns] of Object.entries(lightingPatterns)) {
                for (const pattern of patterns) {
                    if (lowerText.includes(pattern)) {
                        lighting = light;
                        break;
